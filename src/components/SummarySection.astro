---
interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<section class="summary-section">
  <h3 class="title">{title}</h3>
  <slot></slot>
</section>

<style lang="scss" is:global>
  .summary-section {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 12px;
  }
</style>
